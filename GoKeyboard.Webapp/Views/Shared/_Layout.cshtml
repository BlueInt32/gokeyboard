<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>@ViewBag.Title</title>
		@Styles.Render("~/Content/css")
		@Scripts.Render("~/bundles/modernizr")
	</head>

<body>
    <div id="header">
        <div id="sub-header">
            <div id="logo"></div>
            <nav>
                <a href="/">Accueil</a>
                <a href="/Home/ChaptersList">Les leçons</a>
                <a href="/Home/Conseils">Conseils</a>
            </nav>
        </div>
    </div>
	<div id="global">
		<div id="content">
			@RenderBody()
		</div>

		<hr>
		<footer>
			<p>© 2014 - Go Keyboard</p>
		</footer>
	</div>
	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/misc")
	@RenderSection("scripts", required: false)
</body>
</html>
