@using GoKeyboard.DTO
@model List<Lesson>
@{
    ViewBag.Title = "Liste des leçons";
}

<h2>Liste de leçons</h2>
<ul id="lessonsList">
@foreach (Lesson lesson in Model)
{
	<li><a class="button" data-num="@lesson.LessonId" href="@Url.Action("Lesson", new { id=@lesson.GkLessonId})">@lesson.Name</a></li>
}
</ul>